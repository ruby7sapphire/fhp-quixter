<br />
<div class="qx-section-box qx-width-md">
  <h1 class="text-center"><%= current_course.title %></h1>
  <%= image_tag current_course.image.url, class: 'img-fluid' if current_course.image.file %>
  <br />
  <%= link_to 'Preview as Student...',
    course_path(current_course),
    class: 'btn btn-warning float-right' %>
  <br class="qx-clear"/>

  <div class="text-center">
    <%= link_to 'Add a new section...',
      new_instructor_course_section_path(current_course),
      class: 'btn btn-primary btn-lg' %>
  </div>

  <ul>
    <% current_course.sections.each do |section| %>
      <li>
        <%= section.title %>
        <%= link_to 'New Lesson',
          new_instructor_section_lesson_path(section),
          class: 'float-right btn btn-primary btn-sm' %>
          <br class="qx-clear"/>
        <ul>
          <% section.lessons.rank(:row_order).each do |lesson| %>
            <li>
              <b><%= lesson.title %></b>
              -
              <%= lesson.subtitle %>
            </li>
          <% end %>
        </ul>
        <br class="qx-clear"/>
      </li>
    <% end %>
  </ul>

</div>
